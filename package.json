{
  "name": "travenest",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web & npm run dev:api",
    "dev:web": "npm run dev -w @travenest/web",
    "dev:api": "npm run dev -w @travenest/api",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build -w @travenest/web",
    "build:api": "npm run build -w @travenest/api",
    "start": "npm run start --workspaces --if-present",
    "start:web": "npm run start -w @travenest/web",
    "start:api": "npm run start -w @travenest/api",
    "lint": "npm run lint --workspaces --if-present",
    "db:generate": "npm run generate -w @travenest/database",
    "db:push": "npm run push -w @travenest/database",
    "db:migrate": "npm run migrate -w @travenest/database",
    "db:seed": "npm run seed -w @travenest/database",
    "db:studio": "npm run studio -w @travenest/database",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next apps/*/dist packages/*/dist"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}